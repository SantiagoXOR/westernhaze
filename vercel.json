{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "cd westernhaze-app && npm ci && npm run build:web",
  "outputDirectory": "westernhaze-app/dist",
  "installCommand": "cd westernhaze-app && npm install",
  "framework": null,
  "rewrites": [
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/**/*.py": {
      "excludeFiles": "westernhaze-app/**"
    }
  }
}
